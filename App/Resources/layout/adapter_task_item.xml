<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/MainLayout"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="false" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nopicture"
        android:id="@+id/Image"
        android:layout_marginLeft="5px"/>
    <TextView
        style="@style/MyDarkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Name"
        android:layout_toRightOf="@id/Image"
        android:maxLines="1" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SecondaryLayout"
        android:layout_below="@id/Name"
        android:layout_toRightOf="@id/Image" >
        <ImageView
            android:src="@drawable/interfaceicon_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/_Time"
            android:layout_marginLeft="5px"
            android:layout_centerVertical="true"/>
        <TextView
            style="@style/MyDarkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Time"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/_Time" />
    </RelativeLayout>
    <TextView
        style="@style/MyDarkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Description"
        android:layout_below="@id/SecondaryLayout"
        android:layout_toRightOf="@id/Image"
        android:maxLines="1" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Image">
        <ImageButton
            style="@style/MyImageButton"
            android:src="@drawable/interfaceicon_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Open"
            android:layout_weight="1"/>
        <ImageButton
            style="@style/MyImageButton"
            android:src="@drawable/interfaceicon_action_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Complete"
            android:layout_weight="1"/>
        <ImageButton
            style="@style/MyImageButton"
            android:src="@drawable/interfaceicon_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Change"
            android:layout_weight="1"/>
        <ImageButton
            style="@style/MyImageButton"
            android:src="@drawable/interfaceicon_action_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Delete"
            android:layout_weight="1"/>
        <!--
        <ImageButton
            style="@style/MyImageButton"
            android:src="@drawable/interfaceicon_action_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AddSub"
            android:layout_weight="1"/>
        -->
    </LinearLayout>
</RelativeLayout>