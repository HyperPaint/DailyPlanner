<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MainLayout"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideInset">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MainLayout">
            <TextView
                style="@style/MyDarkText"
                android:text="@string/theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/SecondaryLayout">
                <RadioGroup
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/Theme">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/themelight"
                        android:id="@+id/Light" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/themedark"
                        android:id="@+id/Dark"/>
                </RadioGroup>
            </LinearLayout>
            <TextView
                style="@style/MyDarkText"
                android:text="@string/tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/SecondaryLayout2">
                <TextView
                    style="@style/MyDarkText"
                    android:text="@string/notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true" />
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Notification"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView
                style="@style/MyDarkText"
                android:text="@string/exceptionotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/SecondaryLayout3">
                <TextView
                    style="@style/MyDarkText"
                    android:text="@string/notifyinadvance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true" />
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/NotifyInAdvance"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView
                style="@style/MyDarkText"
                android:text="@string/timeinminutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>
            <EditText
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TimeInMinutes"
                android:enabled="false"
                android:focusedByDefault="false" />
            <Button
                style="@style/MyButton"
                android:text="@string/notificationtest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/NotificationTest" />
            <Button
                style="@style/MyButton"
                android:text="@string/deletetasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DeleteTasks" />
            <TextView
                style="@style/MyDarkText"
                android:text="@string/writes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                style="@style/MyButton"
                android:text="@string/deletewrite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DeleteWrites" />
            <TextView
                style="@style/MyDarkText"
                android:text="@string/general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                style="@style/MyButton"
                android:text="@string/clearall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ClearAll" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>