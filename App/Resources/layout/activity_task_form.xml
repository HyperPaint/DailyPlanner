<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/SecondaryLayout"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MainLayout">
            <TextView
                style="@style/MyDarkText"
                android:text="@string/primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Name"
                android:inputType="text|textCapSentences"
                android:hint="@string/name" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Description"
                android:inputType="textMultiLine|text|textCapSentences"
                android:hint="@string/description"
                android:focusedByDefault="false" />
            <TextView
                style="@style/MyDarkText"
                android:text="@string/tasktype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SecondaryLayout2">
                <CheckBox
                    android:text="@string/urgent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/Urgent" />
                <CheckBox
                    android:text="@string/important"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/Important" />
            </LinearLayout>
            <TextView
                style="@style/MyDarkText"
                android:text="@string/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SecondaryLayout3">
                <ImageView
                    android:src="@drawable/interfaceicon_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical" />
                <EditText
                    android:inputType="date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/DateSelect"
                    android:layout_weight="1"
                    android:hint="@string/dateselect"/>
                <ImageView
                    android:src="@drawable/interfaceicon_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical" />
                <EditText
                    android:inputType="time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/TimeSelect"
                    android:layout_weight="1"
                    android:hint="@string/timeselect"/>
            </LinearLayout>
            <Button
                style="@style/MyButton"
                android:text="@string/datetimeforget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DateTimeForget" />
            <TextView
                style="@style/MyDarkText"
                android:text="@string/repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioGroup">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/norepeat"
                    android:id="@+id/NoRepeat"
                    android:enabled="false"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repeatdays"
                    android:id="@+id/Days"
                    android:enabled="false" />
                <EditText
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/DaysEdit"
                    android:hint="@string/inputdays"
                    android:enabled="false"
                    android:focusedByDefault="false" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repeatweek"
                    android:id="@+id/Week"
                    android:enabled="false" />
                <RadioButton
                    android:text="@string/repeatmonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Month"
                    android:enabled="false" />
                <RadioButton
                    android:text="@string/repeatyear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Year"
                    android:enabled="false" />
            </RadioGroup>
            <TextView
                style="@style/MyDarkText"
                android:text="@string/icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/IconList"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        style="@style/MyLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="100dp"
        android:layout_alignParentBottom="true">
        <Button
            style="@style/MyButton"
            android:text="@string/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Save"
            android:layout_weight="1"/>
        <Button 
            style="@style/MyButton"
            android:text="@string/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Close"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>