<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MainLayout"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical|horizontal"
        android:scrollbarStyle="outsideOverlay"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SecondaryLayout">
            <ImageButton
                style="@style/MyImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menubutton_task"
                android:id="@+id/TaskList"
                android:layout_row="1"
                android:layout_column="1" />
            <TextView
                style="@style/MyDarkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tasks"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:minWidth="25dp"
                android:layout_row="3"
                android:layout_column="1"
                android:visibility="invisible" />
            <ImageButton
                style="@style/MyImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menubutton_settings"
                android:id="@+id/Settings"
                android:layout_row="4"
                android:layout_column="1" />
            <TextView
                style="@style/MyDarkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_gravity="center"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:minWidth="25dp"
                android:layout_row="1"
                android:layout_column="2"
                android:visibility="invisible" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:minWidth="25dp"
                android:layout_row="2"
                android:layout_column="2"
                android:visibility="invisible" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:minWidth="25dp"
                android:layout_row="3"
                android:layout_column="2"
                android:visibility="invisible" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:minWidth="25dp"
                android:layout_row="4"
                android:layout_column="2"
                android:visibility="invisible" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:minWidth="25dp"
                android:layout_row="5"
                android:layout_column="2"
                android:visibility="invisible" />
            <ImageButton
                style="@style/MyImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menubutton_write"
                android:id="@+id/WriteList"
                android:layout_row="1"
                android:layout_column="3"/>
            <TextView
                style="@style/MyDarkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/writes"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_gravity="center"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:minWidth="25dp"
                android:layout_row="3"
                android:layout_column="3"
                android:visibility="invisible" />
            <ImageButton
                style="@style/MyImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menubutton_about"
                android:id="@+id/About"
                android:layout_row="4"
                android:layout_column="3" />
            <TextView
                style="@style/MyDarkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:layout_row="5"
                android:layout_column="3"
                android:layout_gravity="center"/>
        </GridLayout>
    </ScrollView>
</RelativeLayout>